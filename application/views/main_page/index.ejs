<% layout('../layouts/frontend') -%>

<div class="cl"></div>
<!-- Latest Products -->
<div class="products">
    <h2>Latest Products</h2>
    <% auctions.forEach( function(auction, index){ %>
    <div class="js-product-holder js-live-auction product-holder" data-auction-id="<%- auction._id %>">
        <div class="product">
            <a title="Details" href="#"><img src="<%- auction.images[0] %>" alt="Black and red stylish computer case" /></a>
            <p><%- auction.title %></p>
        </div>
        <p class="js-winner winner"><%- auction.lastBidder %></p>
        <div class="price-label">
            <strike>&euro;<%- auction.retailerPrice %></strike>
            <% startingPriceParts = String(auction.currentPrice).split('.') %>
            <p class="price">
                &euro;<span class="js-int"><%- startingPriceParts[0]  %></span>
                      <sup><%- startingPriceParts[1].substr(0, 2)  %></sup>
            </p>
        </div>
        <span class="js-time-label time-label" data-secs-left="<%- getSecsDiffToDate(auction.endDate) %>"><i class="fa fa-clock-o"></i> <span>666d 18:20:32</span></span>
        <a class="js-do-bid-btn bid-btn">Bid!</a>
    </div>
    <% }) %>
    <div class="product-holder">
        <div class="product">
            <a title="Details" href="#"><img src="images/case2.jpg" alt="Beautiful white case with flower motives" /></a>
            <img class="sale-label" src="images/sale-label.png" alt="Sale!" />
            <p>Case Model</p>
        </div>
        <p>Product 20</p>
        <div class="price-label">
            <strike>$117.50</strike>
            <p class="price">Â£96.<sup>35</sup></p>
        </div>
    </div>


    <div class="cl"></div>
</div>
<!-- END Latest Products -->

